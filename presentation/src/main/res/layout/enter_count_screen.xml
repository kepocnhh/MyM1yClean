<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/background"
              android:background="@color/white"
              android:clickable="true"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/count_value"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="128dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_size_less">
        <TextView
            android:id="@+id/income"
            android:text="income"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/outcome"
            android:text="outcome"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_size_large">
            <TextView
                android:id="@+id/value_1"
                android:text="1"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_2"
                android:text="2"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_3"
                android:text="3"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_size_large">
            <TextView
                android:id="@+id/value_4"
                android:text="4"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_5"
                android:text="5"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_6"
                android:text="6"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_size_large">
            <TextView
                android:id="@+id/value_7"
                android:text="7"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_8"
                android:text="8"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_9"
                android:text="9"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_size_large">
            <TextView
                android:id="@+id/to_minor"
                android:text="."
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/value_0"
                android:text="0"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/backspace"
                android:src="@mipmap/backspace"
                android:tint="@color/black"
                android:padding="24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_size_large">
        <ImageView
            android:id="@+id/cancel"
            android:src="@mipmap/cancel"
            android:tint="@color/black"
            android:padding="24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/confirm"
            android:src="@mipmap/checked"
            android:tint="@color/black"
            android:padding="24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>