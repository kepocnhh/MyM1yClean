<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_size_medium">
        <TextView
            android:id="@+id/balance"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/sort"
            android:visibility="gone"
            android:src="@mipmap/ic_import_export_white_24dp"
            android:scaleType="centerInside"
            android:tint="@color/white"
            android:layout_width="@dimen/container_size"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/new_transaction"
            android:src="@mipmap/ic_add_white_24dp"
            android:scaleType="centerInside"
            android:tint="@color/white"
            android:layout_width="@dimen/container_size"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/logout"
            android:src="@mipmap/ic_exit_to_app_white_24dp"
            android:scaleType="centerInside"
            android:tint="@color/white"
            android:layout_width="@dimen/container_size"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/transactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>