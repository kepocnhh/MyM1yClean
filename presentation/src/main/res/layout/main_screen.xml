<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_size_medium">
        <TextView
            android:id="@+id/balance"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/new_transaction"
            android:src="@mipmap/ic_add_button"
            android:scaleType="centerInside"
            android:tint="@color/black"
            android:layout_width="@dimen/container_size"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/logout"
            android:src="@mipmap/exit"
            android:scaleType="center"
            android:tint="@color/black"
            android:layout_width="@dimen/container_size"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cash_accounts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_size_large"/>
    <View
        android:background="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/transactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>